<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Gun || Ammo</title>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Russo+One" rel="stylesheet">
	<link rel="stylesheet" href="/stylesheets/reset.css">
	<link rel="stylesheet" href="/stylesheets/modal.css">
	<link rel="stylesheet" href="/stylesheets/style.css">
 <script src="javascripts/jquery-1.11.3.min.js"></script>
</head>
<body>
    
	<main>
    <div class="logo" id="logo"></div>
    <form action="get" class="search" id="search"></form>

     <button class="auth-button-main" id="myBtn" >ავტორიზაცია</button>

     <span class="label-place opnCard"></span> 
     <i class="fas fa-cart-arrow-down  opnCard" id="open"></i>
  </main>

	<nav id="nav"><% include blocks/nav.ejs %></nav>



<!-- ========================Modal Login start==================================== -->
<div id="myModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
    </div>
    <div class="container">
    	<img src="/images/logo.png" alt="">
    <form action="post" class="login-form">
    	<div id="error" class="error"></div>
    	<input type="text" class="auth-form" placeholder="მომხმარებელი" id="username" required>
    	<input type="password" placeholder="პაროლი" class="auth-form" id="userpassword" required>
    	<hr>
    	<button type="button" class="login-button" id="loginBtn" class="authorization"><i class="fas fa-sign-in-alt">ავტორიზაცია</i></button>
    	<button type="button" class="registration-button" onclick="window.location.href='registration'"><i class="fas fa-user">რეგისტრაცია</i></button>
    </form>
    </div>
  </div>

</div>
<!-- ========================Slide Show ==================================== -->

<div class="slideshow-container">

  <div class="mySlides fade">
    <img src="/images/slide1.jpg" style="width:100%;height:100%;opacity: 0.7;" >
    <div class="text"></div>
  </div>

  <div class="mySlides fade">
    <img src="/images/slide2.jpg" style="width:100%;height:100%;opacity: 0.7;" >
    <div class="text"></div>
  </div>

  <div class="mySlides fade">
    <img src="/images/slide3.jpg" style="width:100%;height:100%;opacity: 0.7;" >
    <div class="text"></div>
      
  </div>

<script></script>
  <!-- Next and previous buttons -->
 <a class="prev" onclick="plusSlides(1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>


</div>
<br>



<!-- ========================Product ==================================== -->
<section>
  <ul class="ProductsContainer">
    <% products.forEach((bulled, idIndex) => { %>
    <li class="ProductBlock">
      <h2><a href="guns/<%= idIndex %>"><%= bulled.title %></a></h2>
      <img alt="<%= bulled.title %>" src="<%= bulled.imageLink %>"/>
          <p class="productId"> კოდი: <%= bulled.id %> </p>
     <p class="productPrice"> ფასი: <%= bulled.price %> ₾ </p>
        <a class="addToCard fas fa-cart-arrow-down card" data-id="<%= bulled.id %>" data-title="<%= bulled.title %>" data-price="<%= bulled.price %>" data-img="<%= bulled.imageLink %>"></a>
      <a href="guns/<%= idIndex %>" class="productOpt">ვრცლად</a>
 
    </li>

<% })%>
  </ul>

</section>

	<footer>
		<section class="footer-link" id="footer-link"></section>
		<section class="copyright" id="copyright"></section>
	</footer>

<script src="javascripts/modal.js"></script>
<script src="javascripts/main.js"></script>
<script src="javascripts/slider.js"></script>
<script src="javascripts/tcard.js"></script>

</body>
</html>